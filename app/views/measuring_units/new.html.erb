<h1>New measuring_unit</h1>

<% form_for(@measuring_unit) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :full_name %><br />
    <%= f.text_field :full_name %>
  </p>
  <p>
    <%= f.label :abbr_name %><br />
    <%= f.text_field :abbr_name %>
  </p>
  <p>
    <%= f.label :precision %><br />
    <%= f.text_field :precision %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', measuring_units_path %>
