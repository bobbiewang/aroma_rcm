<h1>Products on Sale</h1>


<% form_tag :action => "new", :controller => "sale_orders" do %>

<table>
  <tr>
    <th></th>
    <th>Vendor</th>
    <th>Purchased Date</th>
    <th>Title</th>
    <th>Unit Cost</th>
    <th>#AVL</th>
  </tr>

<% for item in @items %>

  <tr>
    <td><%= check_box_tag "purchase_order_items[#{item.id}]" %></td>
    <td><%=h item.vendor_product.vendor.abbr_name %></td>
    <td><%= link_to item.purchase_order.purchased_at, item.purchase_order %></td>
    <td><%=h item.vendor_product.title %></td>
    <td><%=h number_to_currency(item.unit_cost, :unit => "ï¿¥") %></td>
    <td>
      <%=h number_to_quantity(item.avail_quantity) %><span class="remark">/<%=h number_to_quantity(item.quantity) %></span>
    </td>
  </tr>

<% end %>

</table>

<br />

<%= submit_tag "Generate an Order" %>

<% end %>
