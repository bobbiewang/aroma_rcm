<div class="purchase_order_item">
  <% new_or_existing = purchase_order_item.new_record? ? 'new' : 'existing' %>
  <% prefix = "purchase_order[#{new_or_existing}_purchase_order_item_attributes][]" %>
  <% fields_for prefix, purchase_order_item do |purchase_order_item_form| -%>

    <p>
      <%= purchase_order_item_form.collection_select :vendor_product_id, vendor_products, :id, :title  %>
      <%= purchase_order_item_form.label :unit_price, "Price" %>
      <%= purchase_order_item_form.text_field :unit_price, :size => "4" %>
      <%= purchase_order_item_form.label :quantity, "Quantity" %>
      <%= purchase_order_item_form.text_field :quantity, :size => "1" %>
      <%= link_to_function "remove" , "$(this).up('.purchase_order_item').remove()" %>
    </p>

  <% end -%>
</div>
